{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {

    "httpUri": {
      "type": "string",
      "allOf": [
        { "format": "uri" },
        { "pattern": "^https?://" }
      ]
    },
    "pkgRepo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "uri": {
          "$ref": "#/definitions/httpUri"
        }
      },
      "required": [
        "name",
        "uri"
      ],
      "additionalProperties": false
    }

  },

  "type": "object",
  "properties": {
    "repositories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/pkgRepo"
      }
    }
  },
  "required": [
    "repositories"
  ],
  "additionalProperties": false
}
