{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {

    "httpUri": {
      "type": "string",
      "allOf": [
        { "format": "uri" },
        { "pattern": "^https?://" }
      ]
    }

  },

  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "uri": {
      "$ref": "#/definitions/httpUri"
    },
    "index": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "name",
    "uri"
  ],
  "additionalProperties": false
}
