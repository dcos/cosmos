{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "opt": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "cmd": {
          "type": "string"
        }
      },
      "required": [
        "id", "name"
      ],
      "additionalProperties": false
    },
    "resource": {
      "type": "object",
      "properties": {
        "assets": {
          "type": "object",
          "properties": {
            "uris": {
              "type": "object",
              "properties": {
                "blob": {
                  "type": "string"
                }
              },
              "required": [
                "blob"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "uris"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "assets"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "opt", "resource"
  ],
  "additionalProperties": false
}
