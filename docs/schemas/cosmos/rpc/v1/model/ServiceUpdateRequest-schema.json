{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "appId": {
            "type": "string"
        },
        "options": {
            "type": "object"
        },
        "packageVersion": {
            "type": "string"
        },
        "replace": {
            "type": "boolean",
            "description": "If true any stored configuration will be ignored when producing the updated service configuration."
        }
    },
    "required": [
        "appId",
        "replace"
    ],
    "type": "object"
}
